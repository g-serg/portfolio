mixin contacts(data)
    .contacts
        .contacts__title.main-title Контакты
        ul.contacts__list
            li.contacts__item
                i.fa.fa-skype.fa-2x(aria-hidden="true")
                a.contacts__link(href="skype:")= data.skype
            li.contacts__item
                i.fa.fa-envelope.fa-2x(aria-hidden="true")
                a.contacts__link(href="mailto:")= data.mail
            li.contacts__item
                i.fa.fa-phone.fa-2x(aria-hidden="true")
                a.contacts__link(href="tel:${data.mobileInner}")= data.mobile
            li.contacts__item
                +icon('map_marker')
                a.contacts__link(href="#")= data.address

